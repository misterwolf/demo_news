<h1>Single News</h1>

<hr>

<div class="row new-list">
  <div class="news-item col-lg">
    <%= form_for @single_news do |f| %>
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true, placeholder:"Insert title here..." %><br /><br />
      <%= f.label :content  %><br />
      <%= f.text_area :content, size: "100x10", placeholder:"Insert content here..." %>
      <%= f.submit "Edit News", class:"btn btn-warning mb-5 lg:mr-2 lg:mb-0 block" %>
    <% end %>

    <%= link_to "Delete this News", news_path(@single_news), method: :delete, class:"btn btn-danger mb-5 lg:mr-2 lg:mb-0 block" %>
</div>
